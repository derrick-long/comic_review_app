<h3> <%= yield(:title) %> </h3>
<% if @review.errors.any? %>
  <% @review.errors.full_messages.each do |error| %>
    <li> <%= error %> </li>
  <% end %>
<% end %>
<%= form_for [@comic,@review] do |f| %>
  <div class="field">
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  </div>

  <div class="field">
  <%= f.label :review %>
  <%= f.text_field :content, id: "Review" %>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :comic_id, :value => @comic.id %>

  <%= f.submit yield(:button_text) %>

<% end %>
