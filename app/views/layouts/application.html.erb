<!DOCTYPE html>
<html>
  <head>
    <title>ComicReviewApp</title>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'application' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>

  </head>

  <body>
    <div id="flash-container"></div>
    <% flash.each do |key, value|  %>
      <%= value %>
      <% end %>
    <div class= "nav-bar">
      <% if user_signed_in? %>
      <li>  <%= link_to "Sign Out", destroy_user_session_path %> </li>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
