<%= form_for(@comic) do |f| %>
  <div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <%= f.label :author %>
  <%= f.text_field :author %>
  </div>

  <div class="field">
  <%= f.label :artist %>
  <%= f.text_field :artist %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :genre %>
    <%= f.select(:genre_id) do %>
      <% Genre.all.each do |genre| %>
    <%= content_tag(:option, genre[:genre_name], value: genre[:id]) %>
      <% end %>
    <% end %>

  </div>



  <%= f.submit yield(:button_text) %>

<% end %>
